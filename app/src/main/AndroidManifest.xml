<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qmkj.jydp">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <!-- 屏幕适配设置 -->
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <application
        android:name=".JYDPExchangeApp"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden|adjustPan"></activity>
        <activity
            android:name=".module.login.view.LoginActivity"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".module.login.view.ForgetLoginPwdActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.login.view.CertificationActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.login.view.AreaCodeSecActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.exchangecenter.view.EntrustRecodeActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.login.view.SplashActivity"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/start_apptheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.exchangecenter.view.KlineActivity"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".module.exchangoutsidee.view.OutSideBuyActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.view.PersonInfoActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.view.CurrencyAssetsActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.view.DealerManagementActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.view.MineRecodeActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.view.SystemNoticeActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.view.HotTopicActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.view.HelpCenterActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.view.ContactServiceActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.view.SoftwareInfoActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.view.ModifyLoginPwdActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.exchangoutsidee.view.OutSideSoldActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.exchangoutsidee.view.OutSideSoldDetailActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.mine.view.ModifyPhoneActivity"
            android:launchMode="singleTop" />
        <activity android:name=".module.mine.view.ModifyPaymentActivity" />
        <activity android:name=".module.mine.view.PublishAdvertisementActivity" />
        <activity android:name=".module.mine.view.ReceivablesActivity" />
        <activity android:name=".module.mine.view.OrderRecodeActivity" />
        <activity android:name=".module.mine.view.TransactionRecodeActivity" />
        <activity android:name=".module.mine.view.CurrencyWithDrawRecodeActivity" />
        <activity android:name=".module.mine.view.OutSideExchangeRecodeActivity" />
        <activity android:name=".module.mine.view.OutSideExchangeOrderDetailActivity" />
        <activity android:name=".module.home.view.WebActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity android:name=".module.mine.view.SystemNoticeDetailsActivity"
            android:launchMode="singleTop"></activity>
        <activity android:name=".module.exchangoutsidee.view.OutSideBuyDetailActivity"/>
    </application>

</manifest>