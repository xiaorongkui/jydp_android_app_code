<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--//下拉刷新，自定义属性-->
    <declare-styleable name="refresh_pull_push">
        <attr name="headerHeight" format="integer"/>
        <attr name="footerHeight" format="integer"/>
        <attr name="isShowFooter" format="boolean"/>
    </declare-styleable>

    <!--配置ClickItem属性-->
    <declare-styleable name="ClickItem">
        <!--左边图片-->
        <attr name="leftIcon"/>
        <!--左边文本-->
        <attr name="leftText"/>
        <!--左边文本-->
        <attr name="leftEndText"/>
        <!--右边文本-->
        <attr name="rightText"/>
        <!--右边文本左边距-->
        <attr name="rightTextPaddingLeft"/>
        <!--下面线就上面距-->
        <attr name="bottomLineMarginTop"/>
        <!--右边图标-->
        <attr name="rightIcon"/>
        <!-- 左边文本颜色 -->
        <attr name="leftTextColor"/>
        <!-- 右边文本颜色 -->
        <attr name="rightTextColor"/>
        <!--左边文本字体大小-->
        <attr name="leftTextSize"/>
        <!--左边文本字体大小-->
        <attr name="leftEndTextSize"/>
        <!--右边文本字体大小-->
        <attr name="rightTextSize"/>
        <!-- 右侧图片是否显示-->
        <attr name="rightIconVisible" format="boolean"/>
        <!-- 是否使用默认的高度-->
        <attr name="isDefaultHight" format="boolean"/>
        <!-- 顶部line -->
        <attr name="topLine"/>
        <!-- 底部line -->
        <attr name="bottomLine"/>
    </declare-styleable>

    <!--配置ClickItem属性-->
    <declare-styleable name="EditItem">

        <!--上面文本-->
        <attr name="titleText" format="reference|string"/>
        <attr name="titleEndText" format="reference|string"/>
        <!--下顶部title的文本颜色-->
        <attr name="titleTextColor" format="color"/>
        <attr name="titleEndTextColor" format="color"/>
        <!--顶部title的文本字体大小-->
        <attr name="titleTextSize" format="dimension"/>
        <!-- 顶部title距顶部的距离-->
        <attr name="titleTopMargin" format="integer"/>

        <!--下面编辑的文本hint-->
        <attr name="contentEditHintText" format="reference|string"/>
        <!--下面编辑的文本hint颜色-->
        <attr name="contentEditHintTextColor" format="color"/>
        <!--下面编辑的文本字体大小-->
        <attr name="contentEditTextSize" format="dimension"/>
        <!-- 内容文本距上部的距离-->
        <attr name="contentEditTopMargin" format="integer"/>


        <!-- 右边文本 -->
        <attr name="contentRightText" format="reference|string"/>
        <!-- 右边文本颜色 -->
        <attr name="contentRightTextColor" format="color"/>
        <!--左边文本字体大小-->
        <attr name="contentRightTextSize" format="dimension"/>
        <!-- 右边文本距右边的距离-->
        <attr name="contentRightTextEndMargin" format="integer"/>

        <!-- 右边文本是否显示-->
        <attr name="contentRightTextVisible" format="boolean"/>

        <!-- 底部line -->
        <attr name="bottomLineVisible" format="boolean"/>
        <!-- 底部line -->
        <attr name="bottomLineTopMargin" format="integer"/>

        <!-- 整个item的左右边距 -->
        <attr name="paddingLeftRight" format="integer"/>

        <!-- 输入限制 -->
        <attr name="inputType">
            <flag name="text" value="1"/>
            <flag name="number" value="2"/>
            <flag name="phone" value="3"/>
            <flag name="numberDecimal" value="4"/>
            <flag name="textPassword" value="5"/>
            <flag name="numberPassword" value="6"/>
            <flag name="textPersonName" value="7"/>
        </attr>
        <!-- 输入文本限制 -->
        <attr name="digits" format="reference|string"/>

        <!-- 最大长度 -->
        <attr name="maxLength" format="integer"/>

        <!-- 光标是否可见 -->
        <attr name="textCursorVisible" format="boolean"/>
        <attr name="isEditTextEnable" format="boolean"/>

    </declare-styleable>

    <!--start=======解决重复引用属性报错：外面单独定义重复的-->
    <!--左边图片-->
    <attr name="leftIcon" format="reference"/>
    <!--左边文本-->
    <attr name="leftText" format="reference|string"/>
    <attr name="leftEndText" format="reference|string"/>

    <attr name="rightTextPaddingLeft" format="dimension"/>

    <attr name="bottomLineMarginTop" format="dimension"/>

    <!--右边文本-->
    <attr name="rightText" format="reference|string"/>
    <!--右边图标-->
    <attr name="rightIcon" format="reference"/>
    <!-- 左边文本颜色 -->
    <attr name="leftTextColor" format="color"/>
    <!-- 右边文本颜色 -->
    <attr name="rightTextColor" format="color"/>
    <!--左边文本字体大小-->
    <attr name="leftTextSize" format="dimension"/>
    <attr name="leftEndTextSize" format="dimension"/>
    <!--右边文本字体大小-->
    <attr name="rightTextSize" format="dimension"/>
    <!-- 顶部line -->
    <attr name="topLine" format="boolean"/>
    <!-- 底部line -->
    <attr name="bottomLine" format="boolean"/>

    <!--end=======解决重复引用属性报错：外面单独定义重复的-->
</resources>
