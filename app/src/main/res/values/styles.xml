<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/activity_background</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_loading_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="mainActivityTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="btn" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y65</item>
        <item name="android:layout_marginLeft">@dimen/x30</item>
        <item name="android:layout_marginRight">@dimen/x30</item>
    </style>

    <style name="btn_red" parent="btn">
        <item name="android:background">@drawable/shape_btn_red</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <!--line样式-->
    <style name="line1">
        <item name="android:id">@id/common_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
        <item name="android:background">@color/item_line</item>
    </style>

    <style name="common_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@drawable/common_dialog_bg_shape</item><!--背景透明-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 -->
    </style>

    <!--右输入框EditText样式-->
    <style name="edt_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorBlack_6</item>
        <item name="android:minHeight">@dimen/y64</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/colorBlack_2</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!--左输入框EditText样式-->
    <style name="edt_left" parent="edt_right">
        <item name="android:gravity">left|center_vertical</item>
    </style>
</resources>
