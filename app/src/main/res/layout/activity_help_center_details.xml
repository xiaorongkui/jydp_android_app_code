<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_1"
    android:orientation="vertical">

    <include layout="@layout/common_header"/>

    <View style="@style/line1"/>
    <com.qmkj.jydp.ui.widget.SmoothScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/help_details_tittle_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y17"
                android:layout_marginRight="@dimen/y21"
                />
            <TextView
                android:id="@+id/help_details_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:layout_marginLeft="@dimen/y17"
                android:layout_marginRight="@dimen/y21"
                />
            <TextView
                android:id="@+id/help_details_meg_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:layout_marginLeft="@dimen/y17"
                android:layout_marginRight="@dimen/y21"
                />

        </LinearLayout>

    </com.qmkj.jydp.ui.widget.SmoothScrollView>

</LinearLayout>
