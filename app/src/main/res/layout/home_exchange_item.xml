<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:paddingLeft="@dimen/x30"
              android:paddingRight="@dimen/x30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_exchange_item_iv"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/logo"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="vertical"
            android:paddingBottom="@dimen/y15"
            android:paddingTop="@dimen/y10">

            <TextView
                android:id="@+id/home_exchange_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生源链"
                android:textColor="@color/textGray_title"/>

            <TextView
                android:id="@+id/home_exchange_name_dollar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="$123.00"
                android:textColor="@color/textRed_2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/y15"
            android:paddingTop="@dimen/y10">

            <TextView
                android:id="@+id/home_exchange_volume_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日成交量"
                android:textColor="@color/textGray_title"/>

            <TextView
                android:id="@+id/home_exchange_volume_dollar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="$123.00"
                android:textColor="@color/colorBlack_1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="vertical"
            android:paddingBottom="@dimen/y15"
            android:paddingTop="@dimen/y10">

            <TextView
                android:id="@+id/home_exchange_updown_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日涨跌"
                android:textColor="@color/textGray_title"/>

            <TextView
                android:id="@+id/home_exchange_updown_percent_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="+10.00%"
                android:textColor="@color/textGreen"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/common_line_view"/>
</LinearLayout>