<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x44"
              android:background="@color/color_white_1"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_currency_name_item_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/x15">

            <TextView
                android:id="@+id/home_currency_name_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/syl"
                android:textColor="@color/color_black_5"
                android:textSize="@dimen/text_size_11"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_currency_us_name_item_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MUC"
                    android:textColor="@color/color_black_7"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/home_currency_us_name_item_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/USD"
                    android:textColor="@color/color_black_5"
                    android:textSize="@dimen/text_size_11"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/home_currency_exchange_amount_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="123.00"
            android:textColor="@color/color_black_7"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/home_current_price_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="92.00"
            android:textColor="@color/color_black_7"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x15">

            <ImageView
                android:layout_width="@dimen/x6"
                android:layout_height="@dimen/y4"
                app:srcCompat="@drawable/shape_triangle_green_bg"/>

            <TextView
                android:id="@+id/home_exchange_updown_percent_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x7"
                android:text="+10.00%"
                android:textColor="@color/color_green_4"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line1"/>
</LinearLayout>