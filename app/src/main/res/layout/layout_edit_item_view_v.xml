<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/edit_ll"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:minHeight="@dimen/y55"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/edit_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login_account"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/edit_title_end_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_red_3"
            android:textSize="@dimen/text_size_14"
            tools:text="@string/asterisk"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y16"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_letf_et"
            style="@style/edt_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/login_hint_notice"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/edit_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/x1"
            android:gravity="center"
            android:textColor="@color/color_bule_3"
            android:textSize="@dimen/text_size_14"
            tools:text="@string/vertify_code_count"/>
    </RelativeLayout>

    <View
        android:id="@+id/edit_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y0.5"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/color_gray_3"/>

</LinearLayout>
