<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_gray_1"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y46">

        <TextView
            android:id="@+id/system_contact_service_item_time_tv"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y20"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="2018-03-03 13:13:13"
            android:textColor="@color/color_white_1"
            android:textSize="@dimen/text_size_12"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/x3"
        app:cardElevation="@dimen/x4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white_1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x11"
                android:layout_marginStart="@dimen/x11"
                android:layout_marginTop="@dimen/y12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contact_service_title_item_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="[公告] 公告标题公告标题公告标题公告标   32题"
                    android:textColor="@color/color_black_2"
                    android:textSize="@dimen/text_size_15"/>

                <TextView
                    android:id="@+id/contact_service_deal_status_tv"
                    android:layout_width="@dimen/x50"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x15"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingBottom="@dimen/y3"
                    android:paddingTop="@dimen/y3"
                    android:text="@string/dealed"
                    android:textColor="@color/color_red_5"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>


            <TextView
                android:id="@+id/contact_service_content_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x11"
                android:layout_marginStart="@dimen/x11"
                android:layout_marginTop="@dimen/y12"
                android:includeFontPadding="false"
                android:text="问题内容问题内容问题内容问题内容问题内容问题内容问题内容问题内容问题内容问题内容问题内容。"
                android:textColor="@color/color_black_1"
                android:textSize="@dimen/text_size_13"/>

            <View
                style="@style/line1"
                android:layout_marginTop="@dimen/y10"/>

            <TextView
                android:id="@+id/contact_service_answer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y9"
                android:layout_marginEnd="@dimen/x11"
                android:layout_marginStart="@dimen/x11"
                android:layout_marginTop="@dimen/y9"
                android:includeFontPadding="false"
                android:text="回复内容回复内容回复内容回复内容回复内容"
                android:textColor="@color/color_black_1"
                android:textSize="@dimen/text_size_13"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>