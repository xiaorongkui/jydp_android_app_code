<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@mipmap/login_and_register_bg"
                                            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y26"
        android:paddingTop="@dimen/y45">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginTop="@dimen/y27"
                android:background="@drawable/shape_login_and_register_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y64"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/login_title_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/login_login_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/login"
                            android:textColor="@color/color_bule_1"
                            android:textSize="@dimen/text_size_18"/>

                        <View
                            android:id="@+id/login_login_title_line"
                            android:layout_width="@dimen/x10"
                            android:layout_height="@dimen/y3"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/y5"
                            android:background="@color/color_bule_1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/register_title_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/login_register_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/register"
                            android:textColor="@color/color_gray_2"
                            android:textSize="@dimen/text_size_18"/>

                        <View
                            android:id="@+id/login_register_title_line"
                            android:layout_width="@dimen/x10"
                            android:layout_height="@dimen/y3"
                            android:layout_marginTop="@dimen/y5"
                            android:background="@color/color_bule_1"/>
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/login_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.qmkj.jydp.ui.widget.EditItemView
                            android:id="@+id/login_account_eiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:bottomLineTopMargin="@dimen/x11"
                            app:bottomLineVisible="true"
                            app:contentEditHintText="@string/login_hint_notice"
                            app:contentEditTopMargin="@dimen/x16"
                            app:paddingLeftRight="@dimen/x25"
                            app:titleText="@string/login_account"
                            app:titleTopMargin="@dimen/x21"/>

                        <com.qmkj.jydp.ui.widget.EditItemView
                            android:id="@+id/login_password_eiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:bottomLineTopMargin="@dimen/x10"
                            app:bottomLineVisible="true"
                            app:contentEditHintText="@string/login_hint_password"
                            app:contentEditTopMargin="@dimen/x16"
                            app:paddingLeftRight="@dimen/x25"
                            app:titleText="@string/login_password"
                            app:titleTopMargin="@dimen/x25"/>


                        <Button
                            android:id="@+id/login_bt"
                            style="@style/btn_blue"
                            android:layout_marginLeft="@dimen/x25"
                            android:layout_marginRight="@dimen/x25"
                            android:layout_marginTop="@dimen/y30"
                            android:text="@string/login"/>

                        <TextView
                            android:id="@+id/login_forget_pwd_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/y25"
                            android:layout_marginTop="@dimen/y15"
                            android:text="@string/forget_password"
                            android:textColor="@color/color_gray_2"
                            android:textSize="@dimen/text_size_14"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/register_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.qmkj.jydp.ui.widget.EditItemView
                            android:id="@+id/register_account_eiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:bottomLineTopMargin="@dimen/x4"
                            app:bottomLineVisible="true"
                            app:contentEditHintText="@string/register_account_notice"
                            app:contentEditTextSize="@dimen/text_size_13"
                            app:contentEditTopMargin="@dimen/x10"
                            app:paddingLeftRight="@dimen/x25"
                            app:titleText="@string/login_account"
                            app:titleTopMargin="@dimen/x11"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x25"
                            android:layout_marginRight="@dimen/x25"
                            android:layout_marginTop="@dimen/y16"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/phone"
                                android:textColor="@color/color_black_1"
                                android:textSize="@dimen/text_size_14"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/y12"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/register_phone_erea_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/phone_86"
                                    android:paddingRight="@dimen/x19"
                                    android:textColor="@color/color_black_2"
                                    android:textSize="@dimen/text_size_13"/>

                                <ImageView
                                    android:id="@+id/register_phone_erea_iv"
                                    android:layout_width="@dimen/x7"
                                    android:layout_height="@dimen/y4"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@id/register_phone_erea_tv"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/more_arrow"/>

                                <EditText
                                    android:id="@+id/register_phone_erea_et"
                                    style="@style/edt_left"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/x15"
                                    android:layout_toEndOf="@id/register_phone_erea_iv"
                                    android:hint="@string/login_hint_notice"
                                    android:maxLines="1"/>

                            </RelativeLayout>

                            <View
                                android:id="@+id/edit_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/y1"
                                android:layout_marginTop="@dimen/y5"
                                android:background="@color/color_gray_3"/>

                        </LinearLayout>

                        <com.qmkj.jydp.ui.widget.EditItemView
                            android:id="@+id/register_verification_code_eiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:bottomLineTopMargin="@dimen/x5"
                            app:bottomLineVisible="true"
                            app:contentEditHintText="@string/six_sms_vertification_code"
                            app:contentEditTextSize="@dimen/text_size_13"
                            app:contentEditTopMargin="@dimen/x10"
                            app:contentRightText="@string/vertify_code_count"
                            app:contentRightTextSize="@dimen/text_size_13"
                            app:contentRightTextVisible="true"
                            app:paddingLeftRight="@dimen/x25"
                            app:titleText="@string/verification_code"
                            app:titleTopMargin="@dimen/x15"/>

                        <com.qmkj.jydp.ui.widget.EditItemView
                            android:id="@+id/register_password_one_eiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:bottomLineTopMargin="@dimen/x4"
                            app:bottomLineVisible="true"
                            app:contentEditHintText="@string/register_account_notice"
                            app:contentEditTextSize="@dimen/text_size_13"
                            app:contentEditTopMargin="@dimen/x10"
                            app:paddingLeftRight="@dimen/x25"
                            app:titleText="@string/login_password"
                            app:titleTopMargin="@dimen/x15"/>

                        <com.qmkj.jydp.ui.widget.EditItemView
                            android:id="@+id/register_password_two_eiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:bottomLineTopMargin="@dimen/x5"
                            app:bottomLineVisible="true"
                            app:contentEditHintText="@string/login_password_again_notice"
                            app:contentEditTextSize="@dimen/text_size_13"
                            app:contentEditTopMargin="@dimen/x10"
                            app:paddingLeftRight="@dimen/x25"
                            app:titleText="@string/login_password_again"
                            app:titleTopMargin="@dimen/x15"/>

                        <com.qmkj.jydp.ui.widget.EditItemView
                            android:id="@+id/register_exchange_password_one_eiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:bottomLineTopMargin="@dimen/x4"
                            app:bottomLineVisible="true"
                            app:contentEditHintText="@string/register_account_notice"
                            app:contentEditTextSize="@dimen/text_size_13"
                            app:contentEditTopMargin="@dimen/x10"
                            app:paddingLeftRight="@dimen/x25"
                            app:titleText="@string/exchange_password"
                            app:titleTopMargin="@dimen/x15"/>

                        <com.qmkj.jydp.ui.widget.EditItemView
                            android:id="@+id/register_exchange_password_two_eiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:bottomLineTopMargin="@dimen/x4"
                            app:bottomLineVisible="true"
                            app:contentEditHintText="@string/exchange_password_again_notice"
                            app:contentEditTextSize="@dimen/text_size_13"
                            app:contentEditTopMargin="@dimen/x10"
                            app:paddingLeftRight="@dimen/x25"
                            app:titleText="@string/exchange_password_again"
                            app:titleTopMargin="@dimen/x15"/>

                        <Button
                            android:id="@+id/register_bt"
                            style="@style/btn_blue"
                            android:layout_marginLeft="@dimen/x25"
                            android:layout_marginRight="@dimen/x25"
                            android:layout_marginTop="@dimen/y15"
                            android:text="@string/register"/>

                        <RelativeLayout
                            android:id="@+id/register_agreement_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y16"
                            android:layout_marginTop="@dimen/y15"
                            android:gravity="center_horizontal|bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/register_agreement_notice_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/register_agreement_title_notice"
                                android:textColor="@color/color_black_3"
                                android:textSize="@dimen/text_size_11"/>

                            <TextView
                                android:id="@+id/register_agreement_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/register_agreement_notice_tv"
                                android:text="@string/register_agreement_name"
                                android:textColor="@color/color_bule_3"
                                android:textSize="@dimen/text_size_11"/>
                        </RelativeLayout>
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:background="@drawable/shape_login_logo_bg"/>

            <ImageView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y21"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y30"
                android:src="@mipmap/launch_logo"/>
        </FrameLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>