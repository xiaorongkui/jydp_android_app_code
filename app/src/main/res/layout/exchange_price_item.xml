<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/y1"
              android:layout_marginTop="@dimen/y1"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/price_status_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="å–5"
        android:textColor="@color/color_green_4"
        android:textSize="@dimen/text_size_12"/>

    <TextView
        android:id="@+id/price_total_money_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/color_black_8"
        android:singleLine="true"
        android:textSize="@dimen/text_size_11"/>

    <TextView
        android:id="@+id/price_amount_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:textColor="@color/color_black_8"
        android:singleLine="true"
        android:textSize="@dimen/text_size_11"/>
</LinearLayout>