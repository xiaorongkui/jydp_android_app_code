<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y49"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y49"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/home_unselect"/>

            <TextView
                android:id="@+id/tv_home"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="@string/home"
                android:textColor="@color/color_black_5"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_exchange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_exchange"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/exchange_unselect"/>

            <TextView
                android:id="@+id/tv_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="@string/exchange"
                android:textColor="@color/color_black_5"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_outside_exchange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_outside_exchange"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/outside_exchange_unselect"/>

            <TextView
                android:id="@+id/tv_outside_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="@string/outside_exchange"
                android:textColor="@color/color_black_5"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mine"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/mine_unselect"/>

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="@string/mine"
                android:textColor="@color/color_black_5"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
