<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y85"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x30"
    android:paddingRight="@dimen/x30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/common_edit_line_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textColor="@color/colorBlack_7"
            android:textSize="@dimen/text_size_13"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/common_edit_line_content_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="张三李四"
                android:maxLines="1"
                android:textColor="@color/colorBlack_8"
                android:textColorHint="@color/colorBlack_9"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_13"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/common_edit_line_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/more_arrow"
            android:visibility="gone"/>
    </LinearLayout>

    <View style="@style/line1"/>
</LinearLayout>