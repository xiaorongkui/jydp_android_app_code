<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_header"/>

    <View style="@style/line1"/>

    <com.qmkj.jydp.ui.widget.ClickItemView
        android:id="@+id/mine_recode_register_recode_civ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:paddingRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        app:bottomLine="true"
        app:bottomLineMarginTop="@dimen/y8"
        app:leftText="@string/register_recode"
        app:leftTextColor="@color/color_black_6"
        app:rightIconVisible="true"
        app:rightTextColor="@color/color_black_7"/>

    <com.qmkj.jydp.ui.widget.ClickItemView
        android:id="@+id/mine_recode_transaction_recode_civ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        app:bottomLine="true"
        app:bottomLineMarginTop="@dimen/y8"
        app:leftText="@string/transaction_recode"
        app:leftTextColor="@color/color_black_6"
        app:rightIconVisible="true"
        app:rightTextColor="@color/color_black_7"/>

    <com.qmkj.jydp.ui.widget.ClickItemView
        android:id="@+id/mine_recode_currency_recode_civ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        app:bottomLine="true"
        app:bottomLineMarginTop="@dimen/y8"
        app:leftText="@string/currency_recode"
        app:leftTextColor="@color/color_black_6"
        app:rightIconVisible="true"
        app:rightTextColor="@color/color_black_7"/>

    <com.qmkj.jydp.ui.widget.ClickItemView
        android:id="@+id/mine_recode_outside_exchange_recode_civ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        app:bottomLine="true"
        app:bottomLineMarginTop="@dimen/y8"
        app:leftText="@string/outside_exchange_recode"
        app:leftTextColor="@color/color_black_6"
        app:rightIconVisible="true"
        app:rightTextColor="@color/color_black_7"/>


    <com.qmkj.jydp.ui.widget.ClickItemView
        android:id="@+id/mine_recode_outside_exchange_recode_agcy_civ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x15"
        android:layout_marginStart="@dimen/x15"
        android:layout_marginTop="@dimen/y19"
        android:visibility="gone"
        app:bottomLine="true"
        app:bottomLineMarginTop="@dimen/y8"
        app:leftText="@string/outside_exchange_recode_agcy"
        app:leftTextColor="@color/color_black_6"
        app:rightIconVisible="true"
        app:rightTextColor="@color/color_black_7"/>

</LinearLayout>