<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white_1"
              android:orientation="vertical"
              android:paddingEnd="@dimen/y15"
              android:paddingStart="@dimen/y15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y8"
        android:layout_marginTop="@dimen/y8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/entrust_status_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x16"
            android:text="@string/buy_input"
            android:textColor="@color/color_red_5"
            android:textSize="@dimen/text_size_12"/>


        <TextView
            android:id="@+id/entrust_price_tv"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_black_10"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/entrust_amount_tv"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_black_10"
            android:textSize="@dimen/text_size_12"/>


        <TextView
            android:id="@+id/entrust_exchange_tv"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_black_10"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/entrust_cancel_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x13"
            android:gravity="center"
            android:text="撤销"
            android:textColor="@color/color_bule_3"
            android:textSize="@dimen/text_size_12"/>
    </LinearLayout>

    <View
        style="@style/line1"/>
</LinearLayout>