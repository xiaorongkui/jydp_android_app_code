<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white_1"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/exchange_header_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/y15"
        android:paddingStart="@dimen/x15">

        <ImageView
            android:id="@+id/currency_select_iv"
            android:layout_width="@dimen/x7"
            android:layout_height="@dimen/y12"
            android:src="@mipmap/back"/>

        <TextView
            android:id="@+id/exchange_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/syl"
            android:textColor="@color/color_black_7"
            android:textSize="@dimen/text_size_18"/>
    </LinearLayout>

    <View style="@style/line1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/y17"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kline_tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="9399.5"
            android:textColor="@color/colorGreen_4"
            android:textSize="@dimen/text_size_22"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x38"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/exchange_high_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:text="@string/highest"
                    android:textColor="@color/color_black_6"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/kline_tv_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x9"
                    android:layout_toEndOf="@id/exchange_high_title_tv"
                    android:text="99.0"
                    android:textColor="@color/color_black_7"
                    android:textSize="@dimen/text_size_13"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10">

                <TextView
                    android:id="@+id/exchange_lowest_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:text="@string/lowest"
                    android:textColor="@color/color_black_6"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/kline_tv_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x9"
                    android:layout_toEndOf="@id/exchange_lowest_title_tv"
                    android:text="12.0"
                    android:textColor="@color/color_black_7"
                    android:textSize="@dimen/text_size_13"/>
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/exchange_buy_one_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/buy_one"
                    android:textColor="@color/color_black_6"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/exchange_buy_one_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x9"
                    android:layout_toEndOf="@id/exchange_buy_one_title_tv"
                    android:text="99.0"
                    android:textColor="@color/color_black_7"
                    android:textSize="@dimen/text_size_13"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10">

                <TextView
                    android:id="@+id/exchange_sell_one_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:text="@string/sell_one"
                    android:textColor="@color/color_black_6"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/exchange_sell_one_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x9"
                    android:layout_toEndOf="@id/exchange_sell_one_title_tv"
                    android:text="99.0"
                    android:textColor="@color/color_black_7"
                    android:textSize="@dimen/text_size_13"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exchange_amount"
                android:textColor="@color/color_black_6"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/kline_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="3.11ä¸‡"
                android:textColor="@color/color_black_7"
                android:textSize="@dimen/text_size_13"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y170"
        android:orientation="vertical"
        android:padding="@dimen/y5">

        <include layout="@layout/view_kline_chart_top_ma"/>

        <com.qmkj.jydp.ui.widget.kline.MyCombinedChart
            android:id="@+id/kline_chart_k"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/y21"
            android:layout_weight="4"/>

        <com.qmkj.jydp.ui.widget.kline.MyCombinedChart
            android:id="@+id/kline_chart_volume"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>
    </LinearLayout>

</LinearLayout>