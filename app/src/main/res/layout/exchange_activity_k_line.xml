<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white_1"
              android:orientation="vertical">

    <include layout="@layout/common_header"/>

    <View style="@style/line1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/y17"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kline_tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorGreen_4"
            android:textSize="@dimen/text_size_22"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x38"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/exchange_high_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:text="@string/highest"
                    android:textColor="@color/color_black_6"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/kline_tv_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x9"
                    android:layout_toEndOf="@id/exchange_high_title_tv"
                    android:text="99.0"
                    android:textColor="@color/color_black_7"
                    android:textSize="@dimen/text_size_13"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10">

                <TextView
                    android:id="@+id/exchange_lowest_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:text="@string/lowest"
                    android:textColor="@color/color_black_6"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/kline_tv_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x9"
                    android:layout_toEndOf="@id/exchange_lowest_title_tv"
                    android:text="12.0"
                    android:textColor="@color/color_black_7"
                    android:textSize="@dimen/text_size_13"/>
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/exchange_buy_one_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/buy_one"
                    android:textColor="@color/color_black_6"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/exchange_buy_one_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x9"
                    android:layout_toEndOf="@id/exchange_buy_one_title_tv"
                    android:text="99.0"
                    android:textColor="@color/color_black_7"
                    android:textSize="@dimen/text_size_13"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10">

                <TextView
                    android:id="@+id/exchange_sell_one_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:text="@string/sell_one"
                    android:textColor="@color/color_black_6"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/exchange_sell_one_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x9"
                    android:layout_toEndOf="@id/exchange_sell_one_title_tv"
                    android:text="99.0"
                    android:textColor="@color/color_black_7"
                    android:textSize="@dimen/text_size_13"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exchange_amount"
                android:textColor="@color/color_black_6"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/kline_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:textColor="@color/color_black_7"
                android:textSize="@dimen/text_size_13"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/kline_webview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y400"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y232"
        android:orientation="vertical"
        android:padding="@dimen/y5"
        android:visibility="gone">

        <com.qmkj.jydp.ui.widget.kline.MyCombinedChart
            android:id="@+id/kline_chart_k"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>

        <com.qmkj.jydp.ui.widget.kline.MyCombinedChart
            android:id="@+id/kline_chart_volume"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/entrust_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/y15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/y13"
            android:background="@color/color_bule_1"/>

        <TextView
            android:id="@+id/entrust_recod_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x7"
            android:text="@string/exchange_deal_recently_recod"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exchange_recode_header_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y32"
        android:layout_marginEnd="@dimen/y15"
        android:layout_marginStart="@dimen/y15"
        android:layout_marginTop="@dimen/y10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:textColor="@color/color_black_5"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/unit_price_xt"
            android:textColor="@color/color_black_5"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/amount"
            android:textColor="@color/color_black_5"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x15"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/exchange_deal_time"
            android:textColor="@color/color_black_5"
            android:textSize="@dimen/text_size_12"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/exchange_deal_recode_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"/>
</LinearLayout>