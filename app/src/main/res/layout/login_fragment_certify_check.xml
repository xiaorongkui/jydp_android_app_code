<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white_1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y40">

        <ImageView
            android:id="@+id/certify_name_status_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y110"
            android:scaleType="fitXY"
            android:src="@mipmap/certify_name_check"/>

        <com.dd.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/y10"
            android:orientation="horizontal"
            app:sl_cornerRadius="@dimen/x5"
            app:sl_shadowColor="@color/color_gray_9"
            app:sl_shadowRadius="@dimen/x5">

            <LinearLayout
                android:background="@drawable/shape_view_shadow_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.qmkj.jydp.ui.widget.ClickItemView
                    android:id="@+id/ertify_check_account_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginTop="@dimen/y20"
                    app:bottomLine="false"
                    app:leftText="@string/account"
                    app:leftTextColor="@color/color_black_6"
                    app:leftTextSize="@dimen/text_size_14"
                    app:rightIconVisible="false"
                    app:rightText="hdhdhhhaj呵呵"
                    app:rightTextColor="@color/color_black_7"
                    app:rightTextSize="@dimen/text_size_14"/>

                <com.qmkj.jydp.ui.widget.ClickItemView
                    android:id="@+id/ertify_check_name_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginTop="@dimen/y20"
                    app:bottomLine="false"
                    app:leftText="@string/name"
                    app:leftTextColor="@color/color_black_6"
                    app:leftTextSize="@dimen/text_size_14"
                    app:rightIconVisible="false"
                    app:rightText="肖荣奎"
                    app:rightTextColor="@color/color_black_7"
                    app:rightTextSize="@dimen/text_size_14"/>

                <com.qmkj.jydp.ui.widget.ClickItemView
                    android:id="@+id/ertify_check_type_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginTop="@dimen/y20"
                    app:bottomLine="false"
                    app:leftText="@string/certify_type"
                    app:leftTextColor="@color/color_black_6"
                    app:leftTextSize="@dimen/text_size_14"
                    app:rightIconVisible="false"
                    app:rightText="身份证"
                    app:rightTextColor="@color/color_black_7"
                    app:rightTextSize="@dimen/text_size_14"/>

                <com.qmkj.jydp.ui.widget.ClickItemView
                    android:id="@+id/ertify_check_number_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginTop="@dimen/y20"
                    app:bottomLine="false"
                    app:leftText="@string/certificate_num"
                    app:leftTextColor="@color/color_black_6"
                    app:leftTextSize="@dimen/text_size_14"
                    app:rightIconVisible="false"
                    app:rightText="12134594598489439934893489"
                    app:rightTextColor="@color/color_black_7"
                    app:rightTextSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/ertify_check_picture_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x15"
                    android:layout_marginTop="@dimen/y20"
                    android:gravity="center_vertical"
                    android:text="@string/certify_picture"
                    android:textColor="@color/color_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginTop="@dimen/y15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/certify_check_front_rl"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y100"
                            android:background="@drawable/shape_certify_add_check">

                            <ImageView
                                android:id="@+id/certify_name_front_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_horizontal"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y10"
                            android:text="@string/certify_postitive_photo"
                            android:textColor="@color/color_black_3"
                            android:textSize="@dimen/text_size_11"/>
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/x6"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/certify_check_back_rl"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y100"
                            android:background="@drawable/shape_certify_add_check">

                            <ImageView
                                android:id="@+id/certify_name_back_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y10"
                            android:text="@string/certify_reverse_photo"
                            android:textColor="@color/color_black_3"
                            android:textSize="@dimen/text_size_11"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y20"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginTop="@dimen/y20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/check_mark_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/check_marks"
                        android:textColor="@color/color_black_6"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:id="@+id/check_mark_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x30"
                        android:gravity="right"
                        android:text="多多多多多多多多多多多多多多多多多多多多多多多多多多多多"
                        android:textColor="@color/color_black_7"
                        android:textSize="@dimen/text_size_14"/>
                </LinearLayout>

            </LinearLayout>
        </com.dd.ShadowLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginTop="@dimen/y20"
            android:orientation="horizontal">

            <Button
                android:id="@+id/certify_check_home_bt"
                style="@style/btn_blue"
                android:layout_width="0dp"
                android:layout_height="@dimen/y40"
                android:layout_weight="1"
                android:text="@string/home"/>

            <View
                android:layout_width="@dimen/x15"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/certify_check_status_bt"
                style="@style/btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/y40"
                android:layout_weight="1"
                android:text="@string/re_certification"
                android:textColor="@color/color_bule_1"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>