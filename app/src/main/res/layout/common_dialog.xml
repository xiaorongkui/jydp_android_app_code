<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x30"
        android:layout_marginStart="@dimen/x30"
        android:layout_marginTop="@dimen/y40"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y15"
            android:gravity="center"
            android:textColor="@color/colorBlack_1"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorBlack_1"
            android:textSize="@dimen/text_size_13"/>
    </LinearLayout>

    <View
        android:id="@+id/dialog_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y30"
        android:background="@color/divider"/>

    <FrameLayout
        android:id="@+id/dialog_fl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90">

        <Button
            android:id="@+id/only_confirm_btn"
            android:layout_width="@dimen/x236"
            android:layout_height="@dimen/y90"
            android:layout_gravity="center"
            android:background="@null"
            android:clickable="true"
            android:text="@string/comfirm"
            android:textColor="@color/colorBlack_1"
            android:textSize="@dimen/text_size_12"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/two_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:clickable="true"
                android:text="@string/cancel"
                android:textColor="@color/colorBlack_1"
                android:textSize="@dimen/text_size_12"/>

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/y16"
                android:layout_gravity="center"
                android:background="@color/divider"/>

            <Button
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/comfirm"
                android:textColor="@color/colorBlack_1"
                android:textSize="@dimen/text_size_12"
                android:textStyle="normal"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>