<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:background="@color/item_line">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/item_line"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_pull_refresh_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_pull_refresh_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_refresh_in"/>

            <ImageView
                android:id="@+id/iv_pull_refresh_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_refresh_out"/>

        </FrameLayout>

        <TextView
            android:id="@+id/swipe_refresh_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:text="@string/loading_data"
            android:textColor="@color/textGray_title"
            android:textSize="@dimen/text_size_12"/>
    </LinearLayout>
</RelativeLayout>
