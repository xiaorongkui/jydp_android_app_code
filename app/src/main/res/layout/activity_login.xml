<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/x143"
        android:layout_height="@dimen/x143"
        android:layout_marginTop="@dimen/y50"
        android:scaleType="fitXY"
        android:src="@mipmap/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y40"
        android:text="@string/trading_market"
        android:textColor="@color/colorBlack_2"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x70"
        android:layout_marginRight="@dimen/x70"
        android:layout_marginTop="@dimen/y50"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_title_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/y50"
            android:paddingTop="@dimen/y45"
            android:text="@string/user_login"
            android:textColor="@color/colorRed_2"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/register_title_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/user_register"
            android:textColor="@color/colorBlack_5"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x70"
        android:layout_marginRight="@dimen/x70">

        <LinearLayout
            android:id="@+id/login_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_account_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y64"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:background="@drawable/shape_login"
                android:cursorVisible="false"
                android:drawableLeft="@mipmap/login_user"
                android:drawablePadding="@dimen/x30"
                android:hint="@string/login_hint_notice"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="@dimen/x20"
                android:textColorHint="@color/colorBlack_6"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_11"/>

            <EditText
                android:id="@+id/login_password_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y64"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/shape_login"
                android:cursorVisible="false"
                android:drawableLeft="@mipmap/password"
                android:drawablePadding="@dimen/x30"
                android:hint="@string/login_hint_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="@dimen/x20"
                android:textColorHint="@color/colorBlack_6"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_11"/>

            <Button
                android:id="@+id/login_bt"
                style="@style/button_attribute"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:layout_marginTop="@dimen/y30"
                android:text="@string/login"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y45"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginTop="@dimen/y30"
                android:text="@string/forget_password"
                android:textColor="@color/colorGreen_3"
                android:textSize="@dimen/text_size_11"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/register_account_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y64"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:background="@drawable/shape_login"
                android:cursorVisible="false"
                android:drawableLeft="@mipmap/login_user"
                android:drawablePadding="@dimen/x30"
                android:hint="@string/register_user_name_notice"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/x20"
                android:textColorHint="@color/colorBlack_5"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_11"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y64"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/shape_login"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x20"
                    android:src="@mipmap/phone"/>

                <TextView
                    android:id="@+id/erea_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="+86"
                    android:textColor="@color/colorBlack_8"
                    android:textSize="@dimen/text_size_11"/>

                <ImageView
                    android:id="@+id/erea_code_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x20"
                    android:src="@mipmap/more_arrow"/>

                <EditText
                    android:id="@+id/register_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:hint="@string/register_phone_notice"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/x30"
                    android:textColorHint="@color/colorBlack_6"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_11"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y64"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/shape_login"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/register_verification_code_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:drawableLeft="@mipmap/verifity_code"
                    android:drawablePadding="@dimen/x30"
                    android:hint="@string/verification_code"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/x20"
                    android:textColorHint="@color/colorBlack_6"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_11"/>

                <TextView
                    android:id="@+id/code_time_down_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x20"
                    android:text="@string/get_rigister_getvertify_code_1"
                    android:textColor="@color/colorGreen_3"
                    android:textSize="@dimen/text_size_11"/>
            </LinearLayout>

            <EditText
                android:id="@+id/register_password_one_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y64"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/shape_login"
                android:cursorVisible="false"
                android:drawableLeft="@mipmap/register_password"
                android:drawablePadding="@dimen/x30"
                android:hint="@string/password_one_notice"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="@dimen/x20"
                android:textColorHint="@color/colorBlack_6"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_11"/>

            <EditText
                android:id="@+id/register_password_two_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y64"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/shape_login"
                android:cursorVisible="false"
                android:drawableLeft="@mipmap/register_password"
                android:drawablePadding="@dimen/x30"
                android:hint="@string/password_two_notice"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="@dimen/x20"
                android:textColorHint="@color/colorBlack_6"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_11"/>

            <Button
                android:id="@+id/register_bt"
                style="@style/button_attribute"
                android:layout_marginBottom="@dimen/y45"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:layout_marginTop="@dimen/y30"
                android:text="@string/register"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_15"/>

        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/register_agreement_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register_agreement_notice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginTop="@dimen/y40"
            android:text="@string/register_agreement_title_notice"
            android:textColor="@color/colorBlack_9"
            android:textSize="@dimen/text_size_11"/>

        <TextView
            android:id="@+id/register_agreement_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginTop="@dimen/y40"
            android:layout_toRightOf="@id/register_agreement_notice_tv"
            android:text="@string/register_agreement_name"
            android:textColor="@color/colorGreen_3"
            android:textSize="@dimen/text_size_11"/>
    </RelativeLayout>
</LinearLayout>