<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_assets"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:maxLines="1"
            android:id="@+id/exchange_buy_total_assets_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x58"
            android:textColor="@color/color_black_4"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x4"
            android:layout_toEndOf="@id/exchange_buy_total_assets_tv"
            android:text="@string/xt"
            android:textColor="@color/color_black_9"
            android:textSize="@dimen/text_size_12"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frozen_assets"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/exchange_forzen_assets_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x58"
            android:textColor="@color/color_black_4"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x4"
            android:layout_toEndOf="@id/exchange_forzen_assets_tv"
            android:text="@string/xt"
            android:textColor="@color/color_black_9"
            android:textSize="@dimen/text_size_12"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/available_assets"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/exchange_available_assets_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x58"
            android:textColor="@color/color_bule_1"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x4"
            android:layout_toEndOf="@id/exchange_available_assets_tv"
            android:text="@string/xt"
            android:textColor="@color/color_black_9"
            android:textSize="@dimen/text_size_12"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_price_1"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_12"/>

        <EditText
            android:id="@+id/exchange_unit_price_et"
            style="@style/edt_left"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y22"
            android:layout_marginStart="@dimen/x58"
            android:background="@drawable/shape_text_input_bg"
            android:maxLines="1"
            android:paddingStart="@dimen/x8"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_12"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y9"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_1"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_12"/>

        <EditText
            android:id="@+id/exchange_amount_et"
            style="@style/edt_left"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y22"
            android:layout_marginStart="@dimen/x58"
            android:background="@drawable/shape_text_input_bg"
            android:maxLines="1"
            android:paddingStart="@dimen/x8"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_12"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y5"
        android:maxLines="1"
        android:textColor="@color/color_black_10"
        android:textSize="@dimen/text_size_10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y9"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exchange_password_1"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_12"/>

        <EditText
            android:id="@+id/exchange_passowrd_et"
            style="@style/edt_left"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y22"
            android:layout_marginStart="@dimen/x58"
            android:background="@drawable/shape_text_input_bg"
            android:maxLines="1"
            android:paddingRight="@dimen/x6"
            android:paddingStart="@dimen/x8"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_12"/>

        <ImageView
            android:id="@+id/exchange_passowrd_iv"
            android:layout_width="@dimen/x13"
            android:layout_height="@dimen/y13"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x6"
            android:src="@mipmap/exchange_center_pwd_settings"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y6"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/x11"
            android:layout_height="@dimen/y11"
            android:scaleType="fitXY"
            android:src="@mipmap/exchange_notice"/>

        <TextView
            android:id="@+id/exchange_buy_pwd_notice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x5"
            android:text="@string/exchange_password_login_notice"
            android:textColor="@color/color_black_10"
            android:textSize="@dimen/text_size_10"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/exchange_center_buy_bt"
        style="@style/btn_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y24"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/shape_btn_red"
        android:text="@string/buy_input_1"
        android:textSize="@dimen/text_size_14"/>


</LinearLayout>