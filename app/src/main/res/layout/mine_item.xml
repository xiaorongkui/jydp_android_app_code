<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="@color/colorWhite"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/mine_item_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/mine_info"/>

    <TextView
        android:id="@+id/mine_item_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x30"
        android:layout_toRightOf="@id/mine_item_icon_iv"
        android:text="个人信息"
        android:textColor="@color/colorBlack_4"
        android:textSize="@dimen/text_size_13"/>

    <ImageView
        android:id="@+id/mine_item_more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/more_arrow"/>

    <View
        android:id="@+id/mine_item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_alignLeft="@id/mine_item_name_tv"
        android:layout_alignParentBottom="true"
        android:background="@color/item_line"/>
</RelativeLayout>