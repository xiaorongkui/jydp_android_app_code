<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_click_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:minHeight="48dp"
              android:orientation="horizontal"
              android:background="@drawable/selector_ripple_borderless">

    <ImageView
        android:id="@+id/iv_item_view_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_item_view_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#33383b"
        android:textSize="15sp"
        tools:text="性别"/>

    <RelativeLayout
        android:id="@+id/rl_item_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"/>

    <TextView
        android:id="@+id/tv_item_view_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|right"
        android:ellipsize="end"
        android:textColor="#9d9d9d"
        android:textSize="13sp"
        tools:text="男额打发ad司法答复阿德发阿道夫阿道夫阿道夫阿道夫 发大发 阿道夫"/>

    <View
        android:id="@+id/view_item_view_red_point"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="top"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>
    <!--android:background="@drawable/shape_click_item_red_point"-->

    <ImageView
        android:id="@+id/iv_item_view_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:src="@mipmap/ic_common_arrow"/>

</LinearLayout>