<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_click_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_ripple_borderless"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_view_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x12"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_item_view_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_black_6"
        android:textSize="@dimen/text_size_14"
        tools:text="性别"/>

    <RelativeLayout
        android:id="@+id/rl_item_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_view_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center|right"
        android:maxLines="1"
        android:textColor="@color/color_black_7"
        android:textSize="@dimen/text_size_14"
        tools:text="男额打发ad司法答复阿德发阿道夫阿道夫阿道夫阿道夫 发大发 阿道夫"/>

    <View
        android:id="@+id/view_item_view_red_point"
        android:layout_width="@dimen/x5"
        android:layout_height="@dimen/x5"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/x5"
        android:visibility="gone"/>
    <!--android:background="@drawable/shape_click_item_red_point"-->

    <ImageView
        android:id="@+id/iv_item_view_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:src="@mipmap/certify_add"/>

</LinearLayout>