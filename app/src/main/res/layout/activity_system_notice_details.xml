<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_1"
    android:orientation="vertical">

    <include layout="@layout/common_header" />

    <View style="@style/line1" />

    <com.qmkj.jydp.ui.widget.SmoothScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x17"
            android:paddingRight="@dimen/x17">

            <TextView
                android:id="@+id/notice_details_tittle_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:gravity="center"
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/text_size_15"
                tool:text="公告详情......" />

            <TextView
                android:id="@+id/notice_details_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:textColor="@color/colorBlack_13"
                android:textSize="@dimen/text_size_12"
                tool:text="2018-05-05 12:12:12" />

            <TextView
                android:id="@+id/notice_details_meg_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/text_size_14"
                tool:text="公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容公告内容" />

        </LinearLayout>

    </com.qmkj.jydp.ui.widget.SmoothScrollView>

</LinearLayout>