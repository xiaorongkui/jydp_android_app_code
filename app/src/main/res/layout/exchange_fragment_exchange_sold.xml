<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frozen_amount_1"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x13"
            android:text="123.300"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_12"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/available_amount_1"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x13"
            android:text="123.300"
            android:textColor="@color/color_bule_1"
            android:textSize="@dimen/text_size_12"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y11"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_price_1"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_12"/>

        <EditText
            android:id="@+id/exchange_unit_price_et"
            style="@style/edt_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/y22"
            android:layout_marginStart="@dimen/x29"
            android:layout_weight="1"
            android:background="@drawable/shape_text_input_bg"
            android:maxLines="1"
            android:paddingStart="@dimen/x8"
            android:text="2000"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_12"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y9"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_1"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_12"/>

        <EditText
            android:id="@+id/exchange_amount_et"
            style="@style/edt_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/y22"
            android:layout_marginStart="@dimen/x29"
            android:layout_weight="1"
            android:background="@drawable/shape_text_input_bg"
            android:maxLines="1"
            android:paddingStart="@dimen/x8"
            android:text="2000"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_12"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y5"
        android:text="最大：123.00"
        android:textColor="@color/color_black_10"
        android:textSize="@dimen/text_size_10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y9"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exchange_password_1"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_12"/>

        <EditText
            android:id="@+id/exchange_passowrd_et"
            style="@style/edt_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/y22"
            android:layout_marginStart="@dimen/x5"
            android:layout_weight="1"
            android:background="@drawable/shape_text_input_bg"
            android:drawableRight="@mipmap/exchange_center_pwd_settings"
            android:maxLines="1"
            android:paddingRight="@dimen/x6"
            android:paddingStart="@dimen/x8"
            android:text="2000"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_12"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y6"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/x11"
            android:layout_height="@dimen/y11"
            android:scaleType="fitXY"
            android:src="@mipmap/exchange_notice"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x5"
            android:text="@string/exchange_password_notice"
            android:textColor="@color/color_black_10"
            android:textSize="@dimen/text_size_10"/>

    </LinearLayout>

    <Button
        android:id="@+id/exchange_center_sold_out_bt"
        style="@style/btn_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y24"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/shape_btn_green"
        android:text="@string/sold_out"
        android:textSize="@dimen/text_size_14"/>


</LinearLayout>