<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y96"
              android:background="@color/colorWhite"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/common_header_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y95"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/title_left_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/common_header_back_iv"
                android:layout_width="@dimen/x26"
                android:layout_height="@dimen/y44"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x10"
                android:scaleType="fitXY"
                android:src="@mipmap/more_arrow"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/title_header_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/colorBlack_2"
            android:textSize="@dimen/text_size_15"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x30">

            <TextView
                android:id="@+id/title_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/colorBlack_2"
                android:textSize="@dimen/text_size_13"/>

            <ImageView
                android:id="@+id/title_right"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/y22"
                android:layout_marginRight="@dimen/x15"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
