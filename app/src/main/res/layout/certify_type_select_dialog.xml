<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/certify_type_dialog_ll"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/shape_certify_type_select_dialog"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y15">

        <TextView
            android:id="@+id/list_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/select_certify_type"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_18"/>

        <ImageView
            android:id="@+id/dialog_right_iv"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/y15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x16"
            android:src="@mipmap/cancel"/>
    </RelativeLayout>


    <View
        style="@style/line1"
        android:layout_marginTop="@dimen/y15"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/certify_type_select_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginTop="@dimen/y10"/>
</LinearLayout>