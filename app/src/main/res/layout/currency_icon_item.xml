<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y20"
                android:layout_marginTop="@dimen/y20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/currency_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="盛源链(MUC)"
        android:textColor="@color/textGray"
        android:textSize="@dimen/text_size_13"/>

    <TextView
        android:id="@+id/currency_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x110"
        android:layout_toRightOf="@id/currency_name_tv"
        android:gravity="center_vertical"
        android:text="92.00"
        android:textColor="@color/textGreen"
        android:textSize="@dimen/text_size_13"/>

    <TextView
        android:id="@+id/currency_up_down_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="+132.00%"
        android:textColor="@color/textRed_1"
        android:textSize="@dimen/text_size_13"/>
</RelativeLayout>