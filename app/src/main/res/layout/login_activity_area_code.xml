<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/area_code_search_ll"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/search"/>

        <EditText
            android:id="@+id/area_code_search_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="@string/search_area_cod"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="@dimen/x20"
            android:textColorHint="@color/colorBlack_11"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_13"/>

        <TextView
            android:id="@+id/search_erea_code_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="@string/cancel"
            android:textColor="@color/colorBlack_8"
            android:textSize="@dimen/text_size_12"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_area_code_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/x15"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"/>
</LinearLayout>