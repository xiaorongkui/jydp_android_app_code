<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/area_code_search_ll"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white_1"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y42"
        android:background="@color/color_white_1"
        android:elevation="@dimen/y2"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x14"
        android:paddingRight="@dimen/x14">

        <ImageView
            android:layout_width="@dimen/x16"
            android:layout_height="@dimen/y16"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/search"/>

        <EditText
            android:id="@+id/area_code_search_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="@string/search_area_cod"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="@dimen/x11"
            android:textColorHint="@color/color_black_5"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/search_erea_code_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="@string/cancel"
            android:textColor="@color/color_black_6"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_area_code_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="@dimen/x7"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:overScrollMode="never"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"/>
</LinearLayout>