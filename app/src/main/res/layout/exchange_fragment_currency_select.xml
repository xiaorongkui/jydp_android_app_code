<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_1">

    <LinearLayout
        android:id="@+id/exchange_center_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exchange_center_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y22"
            android:text="@string/exchange"
            android:textColor="@color/color_black_7"
            android:textSize="@dimen/x18"/>

    </LinearLayout>

    <include
        android:id="@+id/type_ll"
        layout="@layout/home_rv_item_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:layout_below="@id/exchange_center_title_ll"
        android:layout_marginTop="@dimen/y13"/>

    <com.qmkj.jydp.ui.widget.utrlrefresh.XRefreshLayout
        android:id="@+id/exchange_center_xrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/type_ll">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/exchange_center_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/y2"/>

    </com.qmkj.jydp.ui.widget.utrlrefresh.XRefreshLayout>

</RelativeLayout>